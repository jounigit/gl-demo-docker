{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest"],
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "test",
      "tests",
      "build",
      "jest.config.js"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
}